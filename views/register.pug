doctype html
html
    title TaskBox
    link(href='./styles/register.css' rel='stylesheet')
    body        
        div.navbar
            div.title
                p taskBox
            div.log-in
                a(href='/login') Login
            div.sign-up
                a(href='/sign-up') Sign Up
        div.register-box
            div.register-title
                p Register with us...
            div.form
                form(method='POST' action='/sign-up')
                    div.user-name
                        label(for='username') Username
                        br
                        br
                        input(type='text' id='username' name='username')
                    div.email
                        label(for='email') Email
                        br
                        br
                        input(type='text' id='mail' name='mail')
                    div.name
                        label(for='name') Name
                        br
                        br
                        input(type='text' id='name' name='name')
                        
                    div.phone-no
                        label(for='phno') Phone No
                        br
                        br
                        input(type='text' id='phno' name='phno')
                    div.password
                        label(for='pw') Password
                        br
                        br
                        input(type='password' id='pw' name='pw')
                    div.submit
                        input(type='submit')
        div.footer
            div.social-networks
                div.desc 
                    p Connect with us via...
                div.facebook
                    a(href='#route1')
                        img(src='/images/facebook.png' height='30' width='30')
                div.instagram
                    a(href='#route2')
                        img(src='/images/instagram.png' height='30' width='30')
                div.linkedin
                    a(href='#route3')
                        img(src='/images/linkedin.png' height='30' width='30')
                div.twitter
                    a(href='#route4')
                        img(src='/images/twitter.png' height='30' width='30')
            div.footer-content
                div.web-tag
                    p Additional Links
                    div.privacy-policy
                        a(href='/privacy-policy') Privacy Policy
                    div.term-condns
                        a(href='/terms-and-condns') Terms and Conditions
                    div.about-us
                        a(href='/about-us') About Us
                div.contact-us
                    p Contact Us
                    br
                    div.details
                        p Mail:taskBoxOfficial@gmail.com
                        br
                        p Phone:+1 7218348478,7384189889
                        br
                        p Address Parkinsons Avenue, NewYork,US
                    